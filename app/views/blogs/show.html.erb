<!-- ********************* Blog Show *************************** -->
<!-- *********************Showing only the 1 blog selected by the controller show action ****************** -->
<div class="col-sm-8 blog-main"> <!-- This is the largest grid spacing available in order for the blog navbar to be to the right on the page -->

  <!-- <p id="notice"><%= notice %></p> -->


  <h2>Title: <%= @blog.title %></h2>

  <p>Status - <%= @blog.status.capitalize %> &nbsp <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %> |
<%= link_to 'Back', blogs_path %></p>

  <p>
    <strong>Body:</strong>
    <%= @blog.body %>
  </p>
  <% unless current_user.is_a? GuestUser %>
      <%= form_for @comment, url: '#' do |f| %>
        <div class="form-group">
          <%= f.label :content, "Add a comment", class: 'blog-comment' %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
  
        <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  <% if @blog.comments.count != 0 %>
    <div>----- Comments  -----</div>
    <%= render @blog.comments %>
  <% end %>
</div>