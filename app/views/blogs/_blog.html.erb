<!-- ********************************** Blog Partial - Display the blog data ***************************** -->
<div class="blog-post">

  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Last updated <%= distance_of_time_in_words(blog.updated_at, Time.now)  %> ago</p>
  
  <%= render partial: 'blogs/admin_actions', locals: {blog: blog} %>
  

  <p>
    <%= markdown blog.body %>
  </p>
</div>
