<!-- ********************************** Topic Partial - Display the topic data ***************************** -->
<div >

  <h2 class="blog-post-title"><%= topic.title %></h2>
    <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= link_to 'Edit', edit_topic_path(topic) %> /
      <%= link_to 'Delete Topic', topic, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
    </p>
  <% end %>

 
</div>
