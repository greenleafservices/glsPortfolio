<%= form_for(topic) do |f| %>
  <% if topic.errors.any? %>
    <% topic.errors.full_messages.each do |error| %>
      <%= alert_generator error %> <!-- Using application helper method -->
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control'  %>
  </div>
  
    <div class="form-group">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>

